<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_margin="5dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/lost_name"
            android:textSize="20sp"
            android:textColor="#000000"
            android:text="物品小称号"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_below="@+id/lost_name"
            android:id="@+id/lost_content"
            android:textSize="18sp"
            android:textColor="#88000000"
            android:text="物品详细信息"
            android:ellipsize="end"
            android:lines="2"
            android:maxLines="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_below="@+id/lost_content"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/lost_position"
            android:textSize="10sp"
            android:textColor="#5BBD2B"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="地点"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/lost_time"
            android:textSize="10sp"
            android:ellipsize="end"
            android:maxLines="3"
            android:textColor="#5BBD2B"
            android:text="和物品邂逅的那一刻"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/lost_image"
        android:scaleType="fitXY"
        android:layout_margin="5dp"
        android:layout_width="80dp"
        android:layout_height="90dp" />

</LinearLayout>